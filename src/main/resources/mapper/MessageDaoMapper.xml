<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cc.blog.dao.MessageDao">
    <!--关于ResultMap 如果实体类与数据库的行相同则不用写，反之则需要写ResultMap-->
    <sql id="table">cc_blog_message</sql>

    <select id="getMessageAll_index" resultType="com.cc.blog.model.Message">
        SELECT
        *
        FROM
        <include refid="table"/>
        ORDER BY
        message_id
        DESC
        LIMIT 0,3
    </select>

    <select id="getMessageAll_index_weight" resultType="com.cc.blog.model.Message">
        SELECT
        *
        FROM
        <include refid="table"/>
        WHERE
        message_weight = 1
        ORDER BY
        message_id
        DESC
        LIMIT 0,3
    </select>

    <select id="getMessageAll" resultType="com.cc.blog.model.Message">
        SELECT
        *
        FROM
        <include refid="table"/>
        ORDER BY
        message_id
        DESC
    </select>

    <select id="getMessageAll_weight" resultType="com.cc.blog.model.Message">
        SELECT
        *
        FROM
        <include refid="table"/>
        WHERE
        message_weight = 1
        ORDER BY
        message_id
        DESC
    </select>

</mapper>